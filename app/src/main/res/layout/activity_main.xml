<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.iconnect.homeautomatonapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <ImageButton
            android:id="@+id/bt_status_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/bluetooth"
            android:scaleType="fitCenter"
            android:layout_marginRight="15dp"/>
        <TextView
            android:id="@+id/tv_connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Disconnected"
            android:textStyle="italic"
            android:clickable="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/lights_imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/lights_off"/>
        <CheckBox
            android:id="@+id/cb_Lights_On"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lights On"/>
        <CheckBox
            android:id="@+id/cb_Lights_Off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lights Off"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/fans_imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/lights_on"/>
        <CheckBox
            android:id="@+id/cb_Fans_On"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lights On"/>
        <CheckBox
            android:id="@+id/cb_Fans_Off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lights Off"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/tv_msg_sent"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            tools:text="Placeholder Text"/>
        <TextView
            android:id="@+id/tv_msg_received"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Placeholder Text"/>
    </LinearLayout>

</LinearLayout>
